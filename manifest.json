{
    "manifest_version": 3,
    "name": "Simple Timer",
    "author": "Jun Ivanne Dalman",
    "version": "1.0.0",
    "description": "A simple lightweight timer",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "action": {
        "default_popup": "./html/popup.html",
        "default_title": "Simple Timer"
    },
    "background": {
        "service_worker": "./js/background.js"
    }
}